<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="id.thoriq.dev.footballmatch">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".team.SearchTeamActivity"
                  android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        </activity>
        <activity
                android:name=".favorite.FavoriteActivity"
                android:theme="@style/AppTheme.NoTitleBar">
        </activity>
        <activity
                android:name=".player.PlayerDetailActivity"
                android:theme="@style/AppTheme.NoTitleBar">
        </activity>
        <activity
                android:name=".team.TeamDetailActivity"
                android:theme="@style/AppTheme.NoTitleBar">
        </activity>
        <activity
                android:name=".league.LeagueActivity"
                android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".league.LeagueDetailActivity"
                android:theme="@style/AppTheme.NoTitleBar">
        </activity>
        <activity
                android:name=".match.MatchActivity"
                android:theme="@style/AppTheme.NoTitleBar">
        </activity>
        <activity
                android:name=".match.MatchSearchActivity"
                android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        </activity>
        <activity
                android:name=".favorite.FavoriteMatchActivity"
                android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        </activity>
    </application>

</manifest>