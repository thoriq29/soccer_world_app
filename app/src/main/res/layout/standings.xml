<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:elevation="10dp"
            android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:id="@+id/a"
                          android:layout_marginLeft="12dp"
                          android:layout_height="50dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@+id/standingsName"
                            android:paddingTop="15dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:layout_width="70dp"
                            android:textColor="#000"
                            android:text="Team"
                            android:textSize="14sp"
                            android:layout_height="match_parent"/>
                    <TextView
                            android:id="@+id/standingsPlayed"
                            android:layout_width="30dp"
                            android:paddingTop="15dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="3dp"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:text="P"
                            android:layout_height="match_parent"/>
                    <TextView
                            android:id="@+id/standingsGf"
                            android:layout_width="30dp"
                            android:paddingTop="15dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="3dp"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:text="GF"
                            android:layout_height="match_parent"/>
                    <TextView
                            android:id="@+id/standingsGa"
                            android:layout_width="wrap_content"
                            android:paddingTop="15dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="3dp"
                            android:textSize="18sp"
                            android:text="GA"
                            android:textAlignment="center"
                            android:layout_height="match_parent"/>
                    <TextView
                            android:id="@+id/standingsW"
                            android:layout_width="30dp"
                            android:paddingTop="15dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="3dp"
                            android:textSize="18sp"
                            android:text="W"
                            android:textAlignment="center"
                            android:layout_height="match_parent"/>
                    <TextView
                            android:id="@+id/standingsD"
                            android:layout_width="30dp"
                            android:paddingTop="15dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="3dp"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:text="D"
                            android:layout_height="match_parent"/>
                    <TextView
                            android:id="@+id/standingsL"
                            android:layout_width="30dp"
                            android:paddingTop="15dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:textSize="18sp"
                            android:text="L"
                            android:textAlignment="center"
                            android:layout_height="match_parent"/>
                    <TextView
                            android:id="@+id/standingsT"
                            android:layout_width="30dp"
                            android:paddingTop="15dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:textSize="18sp"
                            android:text="T"
                            android:textAlignment="center"
                            android:layout_height="match_parent"/>

                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerStandings"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_below="@+id/a"
                    android:layout_height="match_parent"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:visibility="invisible"
                    android:id="@+id/noTeamsResult"
                    android:gravity="center_vertical"
                    android:text="@string/empty_next_match"/>
        </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v7.widget.CardView>
</FrameLayout>